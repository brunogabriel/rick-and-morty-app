<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RickMortySplash" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/appColorSplash</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.RickMortyFirstAccess" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/appColorSplash</item>
        <item name="android:statusBarColor">@color/appColorSplash</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.RickMortyAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background -->
        <item name="android:windowBackground">@color/appColorWhite</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Theme.RickMortyAndroidApp.BottomNavigationView
        </item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Theme.RickMortyAndroidApp.Toolbar.Light</item>
    </style>
</resources>